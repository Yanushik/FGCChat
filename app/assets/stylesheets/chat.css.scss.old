}
#tabs{
    /* float:left;*/
    /* padding-left:5px;*/
     width:7%;
     font-family:"Arial Black";
     list-style-type: none;
     color: #ffffff;
     li{
        width:7%;
        padding-left:0px;
     }
     a{
        width:7%;
        text-decoration:none; 
        color: #ffffff;
     }

}

@media all and (max-width: 1150px) {
    #tabs {font-size:10px;
           width:8%; }
}

@media all and (max-width: 850px) {
     #tabs {font-size:6px;
           width:5%; }
}

@media all and (max-width: 500px) {
     #tabs {font-size:4px;
           width:3%; }
}  

	
